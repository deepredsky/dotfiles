set folder = ~/.mail/
set from = "rajesh@surf.net.np"
set realname = "Rajesh Sharma"

set nm_default_uri="notmuch:///Users/rajesh/.mail"
set virtual_spoolfile=yes

virtual-mailboxes \
        "Unread"      "notmuch://?query=tag:unread"\
        "Today"       "notmuch://?query=date:today and NOT tag:archive"\
        "Yesterday"   "notmuch://?query=date:yesterday and NOT tag:archive"\
        "This Week"   "notmuch://?query=date:week and NOT tag:archive"\
        "This Month"  "notmuch://?query=date:month and NOT tag:archive"\
        "Inbox"       "notmuch://?query=tag:inbox and NOT tag:archive"\
        "Archive"     "notmuch://?query=tag:archive"\
        "Starred"     "notmuch://?query=tag:*"\
        "Sent"        "notmuch://?query=tag:sent"

mailboxes \
          +Work \
          +Work/INBOX \
          +Work/Archive \
          +Work/Sent \
          +Work/Drafts \
          +Work/Trash \
\
          +Personal \
          +Personal/INBOX \
          +Personal/Archive \
          +Personal/Sent \
          +Personal/Drafts \
          +Personal/Starred \
          +Personal/Trash

set sendmail="msmtp"
