# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# get started fast.

[general]
accounts = Personal
pythonfile = ~/.bin/getpassword.py

[Account Work]
localrepository = LocalWork
remoterepository = RemoteWork
synclabels = yes
labelsheader = X-Keywords

[Account Personal]
localrepository = LocalPersonal
remoterepository = RemotePersonal
postsynchook = notmuch new

[Repository LocalWork]
type = Maildir
localfolders = ~/Mail/Work

[Repository RemoteWork]
type = IMAP
remotehost = outlook.office365.com
remoteuser = get_username("work")
remotepasseval = get_password("work")
ssl = yes
sslcacertfile = /usr/local/etc/openssl/cert.pem
folderfilter = lambda folder: folder not in [ 'Calendar', 'Calendar/Birthdays', 'Calendar/Sub Folder 1', 'Calendar/Sub Folder 2', 'Calendar/United States holidays', 'Calendar/United Kingdom holidays', 'Deleted', 'Contacts' ]

[Repository LocalPersonal]
type = GmailMaildir
localfolders = ~/Mail/Personal

[Repository RemotePersonal]
type = Gmail
remoteuser = rajesh@surf.net.np
remotepasseval = get_password("personalmail")
ssl = yes
sslcacertfile = /usr/local/etc/openssl/cert.pem
folderfilter = lambda folder: folder == 'INBOX'
